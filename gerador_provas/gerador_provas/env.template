# ----------------------------------------------------------------------------
# FLASK
# ----------------------------------------------------------------------------
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=sua-chave-secreta-muito-segura-aqui-123456

# ----------------------------------------------------------------------------
# SERVIDOR
# ----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=5000

# ----------------------------------------------------------------------------
# BANCO DE DADOS (PostgreSQL)
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/provas_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=provas_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Para Docker, use:
# DATABASE_URL=postgresql://user:password@db:5432/provas_db
# POSTGRES_HOST=db

# ----------------------------------------------------------------------------
# CREWAI / LLM (Opcional - para uso com modelos de linguagem)
