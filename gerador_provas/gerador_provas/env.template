# ----------------------------------------------------------------------------
# DIAGRAMAS
# ----------------------------------------------------------------------------
DIAGRAMAS_DIR=static/diagramas
DIAGRAMAS_DPI=150

# ----------------------------------------------------------------------------
# LOGS
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_DIR=logs

# ----------------------------------------------------------------------------
# EXPORTAÇÃO
